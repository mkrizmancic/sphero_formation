define block model
(
  size [0.5 0.5 0.5]
  gui_nose 0
)

define topurg ranger
(
	sensor( 			
    range [ 0.0  30.0 ]
    fov 270.25
   samples 1081
  )

  # generic model properties
  color "black"
  size [ 0.05 0.05 0.1 ]
)

define erratic position
(
  #size [0.415 0.392 0.25]
  size [0.35 0.35 0.25]
  origin [-0.05 0 0 0]
  gui_nose 1
  drive "diff"
  localization "gps"
  localization_origin [0 0 0 0]
  topurg(pose [ 0.050 0.000 0 0.000 ])
)

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1

  gui_nose 1
  gui_grid 0
  gui_outline 0

  gripper_return 0
  fiducial_return 0
  laser_return 1
)

# set the resolution of the underlying raytrace model in meters
resolution 0.02

interval_sim 100  # simulation timestep in milliseconds


window
( 
  size [ 745.000 448.000 ] 

  rotate [ 0.000 0 ]
  scale 50
)

# load an environment bitmap
floorplan
( 
  name "test"
  bitmap "test.png"
  size [10 10 1]  # duzina sirina visina
  pose [ 0 0 0 0 ]
)

# throw in two robots
erratic( pose [ 1 2 0 0.000 ] name "era" color "blue")
erratic( pose [ -1 2 0 0.000 ] name "era2" color "blue")